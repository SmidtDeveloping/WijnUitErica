<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.naam %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styling.css" class="css">
</head>

<body>
    <%- include("partials/nav") %>




        <section class="py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-12 col-md-6 text-center">
                        <div class="card border-0 shadow-lg">
                            <img src="<%= product.img %>" class="card-img-top rounded" alt="<%= product.naam %>">
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <% product.cat.forEach(cat=> { %>
                                <span class="badge rounded-pill bg-primary me-1 mb-1">
                                    <%= cat.name %>
                                </span>
                                <% }) %>
                        </div>
                        <% if (product.nieuw) { %>
                            <div class="mb-3">
                                <span class="badge bg-success">NIEUW</span>
                            </div>
                            <% } %>
                                <h2>
                                    <%= product.naam %>
                                </h2>
                                <p>
                                    <%= product.description %>
                                </p>

                                <div class="mb-3">
                                    <% product.smaakprofiel.forEach(smaak=> { %>
                                        <span class="badge bg-info text-dark me-1 mb-1">
                                            <%= smaak %>
                                        </span>
                                        <% }) %>
                                </div>

                                <div class="mb-4">
                                    <% if (promotion && promoPrice) { %>
                                        <p class="fs-4 mb-1">
                                            <span class="text-muted text-decoration-line-through">
                                                €<%= product.prijs.toFixed(2) %>
                                            </span>
                                            <span class="text-danger fw-bold ms-2">
                                                €<%= promoPrice.toFixed(2) %>
                                            </span>
                                        </p>
                                        <% } else { %>
                                            <p class="fs-4 fw-bold">€<%= product.prijs.toFixed(2) %>
                                            </p>
                                            <% } %>

                                                <% if (promotion && promotion.type==="buy_x_get_y" ) { %>
                                                    <span class="badge bg-warning text-dark fs-6">
                                                        <%= promotion.buyQuantity %> + <%= promotion.getQuantity %>
                                                                GRATIS!
                                                    </span>
                                                    <% } %>
                                </div>

                                <form action="/cart/add" method="POST" class="d-flex gap-3 align-items-center">
                                    <input type="hidden" name="id" value="<%= product.id %>">
                                    <input type="hidden" name="name" value="<%= product.naam %>">

                                    <button type="submit" name="quantity" value="1"
                                        class="btn btn-primary d-flex align-items-center">
                                        <i class="bi bi-cart-plus me-2"></i> Fles (1)
                                    </button>

                                    <button type="submit" name="quantity" value="6"
                                        class="btn btn-primary d-flex align-items-center">
                                        <i class="bi bi-box me-2"></i> Doos (6)
                                    </button>
                                </form>
                    </div>
                </div>
            </div>
        </section>



        <%- include("partials/footer") %>



</body>

</html>