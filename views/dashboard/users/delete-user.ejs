  <script>
    function showUserDetails() {
        const userSelect = document.getElementById('userSelect');
        const selectedUserID = userSelect.value;
        const selectedUser = JSON.parse(userSelect.options[userSelect.selectedIndex].dataset.user);

        document.getElementById('username').value = selectedUser.username;
        document.getElementById('roleHeight').value = selectedUser.roleHeight;
        document.getElementById('userSelect').setAttribute('readonly', true);

        // Show the rest of the form
        document.getElementById('userDetails').style.display = 'block';
    }
</script>
</head>

<body>

  <%- include('../../partials/dashboardHeader') %>
  <%- include('../../partials/dashboardNav') %>


  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Verwijder Gebruiker</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
          <li class="breadcrumb-item">Dashboard</li>
          <li class="breadcrumb-item ">Gebruikers</li>
          <li class="breadcrumb-item active">Verwijder</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
          <div class="row">

            <!-- Sales Card -->
            <div class="col-xxl-20 col-md-20">
              <div class="card">
                <div class="card-body">
                    <br>
                    <form action="/dashboard/delete-user" method="POST">
                        <div>
                            <label for="userSelect" class="form-label">Selecteer Gebruiker:</label>
                            <select id="userSelect" name="id" class="form-control" required>
                                <option value="">Selecteer een gebruiker</option>
                                <% users.forEach(function(user) { %>
                                    <option value="<%= user.id %>" data-user='<%= JSON.stringify(user) %>'>
                                        <%= user.name %> (ID: <%= user.id %>)
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <br>
                            <button type="submit" class="btn btn-danger" id="bijwerken">Verwijderen</button>
                      <br>
                      <br>
                        <a href="/dashboard"  class="btn btn-primary">Terug naar dashboard</a> 
                      </form>
                    <br>
                  <!-- End Quill Editor Bubble -->
                </div>
                </div>
              </div>
              </div>
            </div><!-- End Sales Card -->

          </div>
        </div><!-- End Left side columns -->

      

      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->


  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

